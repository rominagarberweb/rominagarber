---
title: Series
layout: layouts/base.njk
templateClass: tmpl-series
---

<section class="series-hero">

  {%- if series.image %}
    <figure>
      <img src="{{ series.image }}" alt="{{ series.image.alt }}" />
    </figure>
  {% endif -%}

</section>

<section class="series-content">
  <div class="series-data-details">
  <h1>{{ series.title }}</h1>

  {% if series.description %}
    {{ series.description | markdownify | safe }}
  {% endif %}

  {% if series.links.length > 0 %}
    <ul>
      {% set linkCount = 0 %}
      {% for link in series.links %}
        {% if linkCount < 3 %} {# limit number of links shown #}

          <li>
            <a href="{{ link.url | url }}" target="_blank" rel="noopener">{{ link.title }}</a>
          </li>

          {% set linkCount = linkCount + 1 %}
        {% endif %}
      {% endfor %}
    </ul>
  {% endif %}

  <div class="book-data">      
    <p>
        {%- if series.publishers.length > 0 %}
          <span class="data-label" style="color: {{ themeColorTertiary }}">Publisher:</span>
          <a href="{{ series.publishers[0].url }}"  rel="noopener">{{ series.publishers[0].title }}</a><br>
        {% endif -%}
        {%- if agent %}
          <span class="data-label" style="color: {{ themeColorTertiary }}">Representation:</span>
          <a href="{{ agent.url }}">{{ agent.name }}, {{ agent.agency }}</a>
        {% endif -%}
      </p>
  </div>

</div>

<div class="series-content">

  <div class="series-reviews">

  {% if series.reviews.length > 0 %}

    <h2>Reviews</h2>

    {% for review in series.reviews %}
    {% if loop.index < 4 %}
    <div class="">
      {{ review.content | markdownify | safe }}
      {% if review.author %}
        <em>&mdash; {{ review.author }}</em>
      {% endif %}
    </div>
    {% else %}
          <div class="more-review">
            {{ review.content | markdownify | safe }}

            {% if review.author %}
              <em>&mdash; {{ review.author }}</em>
            {% endif %}
          </div>
    {% endif %}
    {% endfor %}
    {% if book.reviews.length > 4 %}
      <div class="showmore-actions">
        <button class="btn btn--primary" onClick="window.document.getElementById('review-show').value = true">
          Show more reviews &darr;
        </button>
        <button class="btn btn--primary" onClick="window.document.getElementById('review-show').value = false">
          Show less reviews &uarr;
        </button>
      </div>
      {% endif %}

  {% endif %}

  </div>

  <div class="series-press">

  {% if series.pressItems.length > 0 %}

    <h2>Press</h2>

    {% for pressItem in series.pressItems %}
      <a href="#" target="_blank" rel="noopener">{{ pressItem.title }}</a>
      <time>{{ pressItem.publishedAt | readableDate }}</time>
    {% endfor %}

  {% endif %}

  </div>

  </section>

  <section class="books series-books">
    <h2 class="vh">Series Books</h2>

    {% set seriesBooks = series.seriesBooks or [] %}
    {% set bookSlug = (book.slug and (book.slug.current or book.slug)) | slug %}

    <ol class="booklist" style="counter-reset: start-from {{ books.length + 1 }}">
    {% for book in seriesBooks %}
      <li class="booklist-item">
      <a href="/books/{{ (book.slug.current or book.slug) | slug }}/" class="series-book-link">
        {% if book.cover %}
          {# cover might be a URL string or an object with a .url property #}
          {% if book.cover.url %}
            <img src="{{ book.cover.url }}" alt="{{ book.title }}" width="130" height="200" loading="lazy" view-transition-name="book-cover-{{ bookSlug }}"/>
          {% else %}
            <img src="{{ book.cover }}" alt="{{ book.title }}" width="130" height="200" loading="lazy" view-transition-name="book-cover-{{ bookSlug }}"/>
          {% endif %}
        {% else %}
          <img src="/assets/images/placeholder-book.png" alt="{{ book.title }}" width="130" height="200" loading="lazy" view-transition-name="book-cover-{{ bookSlug }}"/>
        {% endif %}
      </a></li>
    {% endfor %}
    </ol>

    <p class="more-link"><a class="btn btn--posts" href="{{ '/books/' | url }}">More books</a></p>

  </section>
