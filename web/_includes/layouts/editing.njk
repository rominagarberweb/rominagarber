<section class="editing">
  <h1>Editing & Consulting Services</h1>
  <div class="editing-intro">    
    {# {% youtube "https://www.youtube.com/watch?v=yf3L0jnIMno", "Romina Garber Editing & Consulting Services" %} #}
    {% if editingServices and editingServices.youtube and editingServices.youtube.url %}
      {% set ytUrl = editingServices.youtube.url %}
      {% set ytDesc = editingServices.youtube.description or editingServices.title %}
      {% youtube ytUrl, ytDesc %}
    {% endif %}
    

    {{ editingServices.introduction | markdownify | safe }}
  </div>
  <div class="section-grid">

    <div>
    <h2 class="vh">Services</h2>
    <div class="medium-card-wrapper">

      {% for serviceCard in editingServices.serviceCards %}
        <div class="card">
          <div class="card-header">
            <h3>{{ serviceCard.title }}</h3>
            <span class="price">${{ serviceCard.price }}</span>
          </div>
          <p>{{ serviceCard.description | markdownify | safe }}</p> 
        </div>
      {% endfor %}
      </div>
    </div>

  <div class="section-grid">
    <div class="editing-form">
    <h2 class="vh">Interest form</h2>
    <form 
    name="editing-services" 
    netlify-honeypot="bot-field" 
    class="editing-services-interest" 
    method="POST" 
    action="/success-editing-services" 
    data-netlify-recaptcha="true"
    data-netlify="true">
        <label for="name"><span class="data-label">Name</span></label>
        <input type="name" name="name" id="name" class="name-field" autocomplete="email" placeholder="First and last name" title="Name" required>
        <label for="email"><span class="data-label">Email</span></label>
