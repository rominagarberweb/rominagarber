{% for book in homePage.featured %}
{% set bookSlug = (book.slug and (book.slug.current or book.slug)) | slug %}

<section class="featured-book full-bleed" style="background-color: {{ themeColorPrimary }};">

    {%- if book.cover %}
      <figure>
        <img src="{{ book.cover }}" width="260" height="390" alt="{{ book.cover.alt }}" view-transition-name="book-cover-{{ bookSlug }}"/>
        <figcaption>{{ book.cover.caption }}</figcaption>
        {# this download link is currently broken #}
        {# <p class="download-link"><span class="data-label" style="color: {{ themeColorTertiary }};">Download:</span> <a href="{{ book.content.original }}?dl=book-cover.jpg" download="{{ book.content.cover.alt }}" rel="noopener">Large&nbsp;cover&nbsp;image
        </a></p> #}
      </figure>
    {% endif -%}

    <div class="featured-book-info">

    <h2 class="mt0 mb0" style="color: {{ themeColorTertiary  }};">{{ book.title }}</h2>

    {% if book.hook %}
      {{ book.hook | markdownify | safe }}
    {% endif %}

    <div class="book-actions">

      {# (pre-)order and GR TBR links go here #}
      <a class="btn btn--featured-book" style="border-color: {{ themeColorTertiary  }}; color: {{ themeColorTertiary  }};" href="https://www.goodreads.com/book/show/51179882-lobizona" rel="noopener nofollow">Add to Goodreads TBR</a>
      <a class="btn btn--featured-book" style="border-color: {{ themeColorTertiary  }}; color: {{ themeColorTertiary  }};" href="/books/{{ book.slug.current | url }}/"  rel="noopener">More About {{ book.title }}</a>

    </div>

    {% if book.review %}
      {{ book.review | markdownify | safe }}
      {# this review author is not current working on index and books pages I will make sure it is added to the right place in the schema #}
      {% if book.reviewAuthor %}
        <em>&mdash; {{ book.reviewAuthor }}</em>
      {% endif %}
    {% endif %}

    </div>

</section>

{% endfor %}

